#include<iostream>
using namespace std;
int main(void)
{
    int a,b;
    cin>>a;
    switch(a/100000)
    {
    	case 0:b=0.1*a;
    	       cout<<"奖金数量为:"<<b;
			   break;
	    case 1:b=10000+0.075*(a-100000);
		       cout<<"奖金数量为:"<<b;
			   break;
		case 2:b=10000+7500+0.05*(a-200000);
			   cout<<"奖金数量为:"<<b;
			   break;
		case 3:b=10000+7500+0.05*(a-200000);
		       cout<<"奖金数量为:"<<b;
			   break;
		case 4:b=27500+0.03*(a-400000);
		       cout<<"奖金数量为:"<<b;
			   break;
		case 5:b=27500+0.03*(a-400000);
		       cout<<"奖金数量为:"<<b;
			   break;
	    case 6:b=27500+6000+0.015*(a-600000);
		       cout<<"奖金数量为:"<<b;
			   break;
	    case 7:b=27500+6000+0.015*(a-600000);
		       cout<<"奖金数量为:"<<b;
			   break;
		case 8:b=27500+6000+0.015*(a-600000);
		       cout<<"奖金数量为:"<<b;
			   break;
		case 9:b=27500+6000+0.015*(a-600000);
		       cout<<"奖金数量为:"<<b;
			   break;
	    case 10:b=27500+6000+6000+0.01*(a-1000000);
	            cout<<"奖金数量为:"<<b;
			   break;
			   default:b=27500+6000+6000+0.01*(a-1000000);
	            cout<<"奖金数量为:"<<b;
    }           
	return 0;
}
