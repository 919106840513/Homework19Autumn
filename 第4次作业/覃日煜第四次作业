（4）using namespace std;
#include<iostream>
int main(void)
{
	int i=0;
	char ch=0;
	do{
		ch=cin.get();
		if(ch>='0'&&ch<='9')
		i++;
	  }while(ch!='\n');
	  cout<<"i="<<i<<endl;
	return 0;
}

（7）using namespace std;
#include<iostream>
int main(void)
{
	int i=1,j=2,k=1,a=0;
    while(k<=20)
    {
	cout<<i<<'/'<<j<<" ";
	if(i<2)
	 {i=i+j;}
	  else{ a=i;
	        i=i+j;
			j=a;	
	      }
	k++;
	
    }
	return 0;
}

（8）using namespace std;
#include<iostream>
int main(void)
{   
    int x,y=1,k;
    cin>>x;
    while(y<x)
    { k=x%y;
      if(k==0)
      {cout<<y<<" ";
	  }
	  y++;
 	} 
	 
	int a=1,b=0;
    while(a<=100)
     {while(y<a)
     k=a%y;
      if(k==0)
        {b+=k;
        y++;
		  if(b==a)
		   {cout<<a<<" ";
			}
		}   
	 a++;
	 }
	return 0;
}
