（4）using namespace std;
 #include<iostream>
 int main(void)
 {
 	int i=0;
 	char ch=0;
 	do{
 		ch=cin.get();
 		if(ch>='0'&&ch<='9')
 		i++;
 	  }while(ch!='\n');
 	  cout<<"i="<<i<<endl;
 	return 0;
 }

 （7）using namespace std;
 #include<iostream>
 int main(void)
 {
 	int i=1,j=2,k=1,a=0;
     while(k<=20)
     {
 	cout<<i<<'/'<<j<<" ";
 	if(i<2)
 	 {i=i+j;}
 	  else{ a=i;
 	        i=i+j;
 			j=a;	
 	      }
 	k++;

     }
 	return 0;
 }

 （8）using namespace std;
 #include<iostream>
 int main(void)
 {   
     int x,y=1,k;
     cin>>x;
     while(y<x)
     { k=x%y;
       if(k==0)
       {cout<<y<<" ";
 	  }
 	  y++;
  	} 
    int i,j,c;
    for(i=2;i<=100;i++)
     { c=0;
	  for(j=1;j<i;j++)
      {
	    if(i%j==0)
       {
       c=c+j;
	   }
     }
	   if(c==i)
	   cout<<c<<" ";
   } 
}
