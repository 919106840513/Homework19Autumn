（9）
#include<iostream>
#include<math.h>
#define S(p,q,i) (p+q+i)/2
#define AREA(a,b,c,d) sqrt(a*(a-b)(a-c)(a-d)) 
using namespace std;
int main(){
double x,y,z,area;
cin>>x>>y>>z;
area=AREA(S(x,y,z),x,y,z);
cout<<"面积等于"<<area；
return 0；
}


