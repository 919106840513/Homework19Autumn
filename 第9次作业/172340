#include<iostream>
#include"max.cpp"
#include"hex.cpp"
using namespace std;
int main(){
	int x,y;
	cin>>x>>y;
	hex((max(x,y)));
	return 0;
} 
 
int max(int x,int y){
	if(x>y) 
	return x;
    else 
    return y;
}

#include<iostream>
using namespace std;
void hex(int x){	
	cout<<hex<<x;
}

