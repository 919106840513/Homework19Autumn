main71.cpp
#include<iostream>
#include"hex71.cpp"
#include"max71.cpp"
using namespace std;
int main()
{ 
   int k,m,n;
   cin>>m>>n;
   k=max(m,n);
   cout<<k<<":"<<tohex(k);
	
}


max71.cpp
#include<iostream>
int max(int n, int m)
{int a;
  a=n>m?n:m;
}

hex71.cpp
#include<iostream>
using namespace std;

int tohex(int x)
{cout<<hex<<x;
return 0;
}




#include<iostream>
#include<cmath>
#define S(a,b,c)   ((a)+(b)+(c))/2
using namespace std;
int main ()
{   float a,b,c,m,k,area;
    
cin>>a>>b>>c;
    k=S(a,b,c);
    m=(k*(k-a)*(k-b)*(k-c));
    area=sqrt(m);
	cout<<area;
 } 
