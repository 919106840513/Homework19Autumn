(8)
#include <iosteam>
using namespace std;
int main()
{
  int i,j,result;
  cout<<"\n";
  for (i=1;i<10;i++)
  {
    for(j=1;j<10;j++)
    {
      result=i*j;
      cout<<"%d*%d=%-3d,i,j,result;
    }
    cout<<"\n";
  }
  return 0;
}

