using namespace std;
#include<iostream>
int main (void)
{ cout<<"   **********"<<endl;
  cout<<"  *"<<endl;
  cout<<" *"<<endl;
  cout<<"*"<<endl;
  cout<<"*"<<endl;
  cout<<"*"<<endl;
  cout<<" *"<<endl;
  cout<<"  *"<<endl;
  cout<<"   **********"<<endl;
 return 0;
}



（8）
using namespace std;
#include<iostream>
int main (void)
{
	int i=1,j=1;
	while(j<=9)
	{ while(i<=9)
	  {if(i<=j)
	     {cout<<i<<"*"<<j<<"="<<i*j<<" ";}
		 i++;  
	  }  
	i=1;
	cout<<endl;
	j++;
	}
	
	
	return 0;
	
}
