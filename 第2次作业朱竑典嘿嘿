第23题
#include <iostream>
using namespace std;
int main ()
{
	int x;
	cin>>x;
if
	(x%2==0&&x>2) 
	cout<<"x为大于2的偶数"<<endl;
else
	cout<<"x不为大于2的偶数"<<endl; 
	return 0;	 
} 

第24题
#include <iostream>
using namespace std;
main ()
{
	int x;
	cin>>x;
if
	(x<-8||x>8) 
	cout<<"x的绝对值大于8"<<endl;
else
	cout<<"x的绝对值不大于8"<<endl; 
	return 0;	 
} 

