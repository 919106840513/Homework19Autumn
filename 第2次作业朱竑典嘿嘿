第27题
（1）1；（2）1；（3）31；（4）0

第28题
#include <iostream>
using namespace std;
main ()
{
	double C,F,K;
	cin>>C;
	F=C*9/5+32;
	K=C+273.15;
	cout<<F<<endl;
	cout<<K<<endl;
	return 0;
} 


#include <iostream>
using namespace std;
main ()
{
	int a,b,t,i,n,g;
	cin>>a>>b;
	t=a+b;
	i=a-b;
	n=a*b;
	g=a/b;
	cout<<t<<endl<<i<<endl<<n<<endl<<g<<endl;
	return 0;
} 


#include <iostream>
using namespace std;
main ()
{
	double w,m;
	int c;
	cin>>w;
	c=w;
	cout<<c<<endl;
	m=w-c;
	cout<<m<<endl;
	return 0;
} 
